@model IEnumerable<CRUD.Models.Prato>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pratos</h2>

<p>
    <button type="button" class="btn-success" id="btnNovoPrato">Cadastrar Novo Prato</button>
</p>
<div class="areaLista">
    @if (Model.Count() == 0)
    {
        <div class="form-group text-center">
            <label>Nenhum prato para exibir</label>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th width="5%"></th>
                <th width="5%"></th>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurante.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Delete", "Prato", new { id = item.ID })">
                            <img class="btnExcluir" src="~/Content/imgs/delete.png" />
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Prato", new { id = item.ID })">
                            <img class="btnEditar" src="~/Content/imgs/edit.png" />
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restaurante.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                </tr>
            }

        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#btnNovoPrato').click(function () {

            location.href = "Prato/Create";
        })
    </script>
}
